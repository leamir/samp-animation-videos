{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Gamemode",
            "type": "shell",
            "command": "${workspaceFolder}/qawno/pawncc.exe",
            "args": ["-i${workspaceFolder}/qawno/include", "-i${workspaceFolder}/includes", "${file}", "-Dgamemodes", "-d3", "'-(+'", "'-;+'"],
            "problemMatcher": "$pawncc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}